<p id="notice"><%= notice %></p>

<h1>List Yo Music</h1>

<table>
  <thead>
    <tr>
      <th>Track</th>
      <th>Artist</th>
      <th>Album</th>
      <th>Rating</th>
      <th>Label</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musics.each do |music| %>
      <tr>
        <td><%= music.track %></td>
        <td><%= music.artist %></td>
        <td><%= music.album %></td>
        <td><%= music.rating %></td>
        <td><%= music.label %></td>
        <td><%= link_to 'Show', music %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_music_path(music) %></td>
          <td><%= link_to 'Destroy', music, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Music', new_music_path %>
<% end %>
